@model LawSuitCUVM


@if (ViewBag.Message != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @ViewBag.Message
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="row">
    <form asp-action="Update">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <input asp-for="LawSuit.Id" type="hidden" />

        <div class="col-6">
            <div class="form-group">
                <label asp-for="LawSuit.RegistrationDate">RegistrationDate</label>
                <input type="datetime" asp-for="LawSuit.RegistrationDate" value="@DateTime.Now">
                <span asp-validation-for="LawSuit.RegistrationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LawSuit.ExpirationDate">ExpirationDate</label>
                <input type="datetime" asp-for="LawSuit.ExpirationDate">
                <span asp-validation-for="LawSuit.ExpirationDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LawSuit.StatusId">Status</label>
                <select class="form-control" asp-items="Model.Components.Statuses" asp-for="LawSuit.StatusId"></select>
                <span asp-validation-for="LawSuit.StatusId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LawSuit.PersonId">Type</label>
                <select class="form-control" asp-items="Model.Components.People" asp-for="LawSuit.PersonId"></select>
                <span asp-validation-for="LawSuit.PersonId" class="text-danger"></span>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Update</button>
                    <a asp-action="Index">Go back</a>
                </div>
            </div>
        </div>
    </form>
</div>

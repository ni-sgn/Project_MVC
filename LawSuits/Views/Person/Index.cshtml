@model PersonListVM

<button>
    <a asp-action="Create">Create</a>
</button>

<table class="table table-success table-striped">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Personal Id</th>
            @* <th scope="col">Company Name</th> *@
            @* <th scope="col">Company Id</th> *@
            @* <th scope="col">City</th> *@
            <th scope="col">Type</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td></td>
            <td></td>
            <form asp-action="Index">
                <td><input type="text" name="searchName" /></td>
                <td>
                    <select name="searchType">
                        <option value="0">All</option>
                        <option value="9">Private</option>
                        <option value="10">Legal</option>
                    </select>
                </td>
                <td><input type="submit" value="serach"></td>
            </form>
        </tr>
        @foreach (var item in Model.People)
        {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.PersonalId</td>
                @* <td>@item.CompanyName</td> *@
                @* <td>@item.CompanyId</td> *@
                @* <td>@item.PhoneNumber</td> *@
                @* <td>@item.City</td> *@
                <td>@item.Type</td>
                <td>
                    <button><a asp-action="Detail" asp-route-id="@item.Id" asp-controller="Person">View Detail</a></button>
                    <button><a asp-controller="Person" asp-action="Update" asp-route-id="@item.Id">Edit</a></button>
                    <button><a asp-action="Delete" asp-controller="Person" asp-route-id="@item.Id">Delete</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>